{
  "name": "colabi",
  "version": "1.0.0",
  "description": "Node.js TypeScript integration with Azure AI Foundry",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "npm run clean && tsc -p . && copyfiles -u 1 'src/views/**/*' dist/ && copyfiles -u 1 'src/public/**/*' dist/ && cp package.json dist/",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/Migration -d src/config/database.ts",
    "migration:create": "npm run typeorm -- migration:create src/migrations/Migration",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/config/database.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/config/database.ts",
    "seed": "tsx src/scripts/seed.ts"
  },
  "keywords": [
    "azure",
    "ai",
    "foundry",
    "openai",
    "typescript",
    "nodejs",
    "typeorm",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/ai-projects": "^1.0.0-beta.8",
    "@azure/core-auth": "^1.9.0",
    "@azure/identity": "^4.10.0",
    "@azure/openai": "^2.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10", 
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.5.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.1.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
